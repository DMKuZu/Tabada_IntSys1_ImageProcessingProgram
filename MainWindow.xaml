<Window x:Class="Tabada_IntSys1_ImageProcessingProgram.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tabada_IntSys1_ImageProcessingProgram"
        mc:Ignorable="d"
        Title="Image Processor" MinHeight="450" MinWidth="800"
        Icon="/bitmap-logo.ico"
        WindowStartupLocation="CenterScreen" FontFamily="Microsoft Sans Serif">

    <Window.Resources>
        <!-- Style for TextBlock -->
        <Style TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <!-- Style for Image -->
        <Style TargetType="Image">
            <Setter Property="Stretch" Value="Uniform"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="MinWidth" Value="250"/>
            <Setter Property="MinHeight" Value="250"/>
        </Style>

        <Style TargetType="DockPanel">
            <Setter Property="LastChildFill" Value="True"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
        </Style>
    </Window.Resources>

    <StackPanel>
        <TabControl>
            <!-- 1. BASIC MODE -->
            <TabItem Header="Basic Mode">
                <DockPanel>
                    <!-- Top Buttons -->
                    <Grid DockPanel.Dock="Top">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Row="0" Grid.Column="0" Content="Load Image" Click="LoadImage"/>
                        <Button Grid.Row="0" Grid.Column="1" Content="Save Output" Click="SaveBasicOutput"/>
                        <Button Grid.Row="0" Grid.Column="2" Content="Clear Images" Click="ClearBasicImages"/>
                    </Grid>

                    <!-- Bottom Buttons -->
                    <Grid DockPanel.Dock="Bottom" VerticalAlignment="Bottom">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Row="0" Grid.Column="0" Content="Copy Image"  Click="Copy"/>
                        <Button Grid.Row="0" Grid.Column="1" Content="Invert Image"  Click="Invert"/>
                        <Button Grid.Row="0" Grid.Column="2" Content="Grayscale Image"  Click="GrayScale"/>
                        <Button Grid.Row="0" Grid.Column="3" Content="Sepia Image"  Click="Sepia"/>
                        <Button Grid.Row="0" Grid.Column="4" Content="Histogram of Image"  Click="Histogram"/>
                    </Grid>

                    <!-- Middle Image Section -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Text Labels -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Image"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="Output"/>

                        <!-- Images -->
                        <Image x:Name="InputImage" Grid.Row="1" Grid.Column="0"/>
                        <Image x:Name="OutputImage" Grid.Row="1" Grid.Column="1"/>
                    </Grid>
                </DockPanel>
            </TabItem>

            <!-- 2. SUBTRACT MODE -->
            <TabItem Header="Subtract Mode">
                <DockPanel>
                    <!-- Top Buttons -->
                    <Grid DockPanel.Dock="Top">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Row="0" Grid.Column="0" Content="Save Output" Click="SaveSubtractOutput"/>
                        <Button Grid.Row="0" Grid.Column="1" Content="Clear Images" Click="ClearSubtractImages"/>
                    </Grid>
                    <!-- Bottom Buttons -->
                    <Grid DockPanel.Dock="Bottom">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Row="0" Grid.Column="0" Content="Load Foreground" Click="LoadForeground"/>
                        <Button Grid.Row="0" Grid.Column="1" Content="Load Background" Click="LoadBackground"/>
                        <Button Grid.Row="0" Grid.Column="2" Content="Subtract Image" Click="Subtract"/>
                    </Grid>

                    <!-- Images Section -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Text Labels -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Foreground"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="Background"/>
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="Output"/>

                        <!-- Images -->
                        <Image x:Name="ForegroundImage" Grid.Row="1" Grid.Column="0"/>
                        <Image x:Name="BackgroundImage" Grid.Row="1" Grid.Column="1"/>
                        <Image x:Name="SubtractOutputImage" Grid.Row="1" Grid.Column="2"/>
                    </Grid>
                </DockPanel>
            </TabItem>

            <!-- 3. WEBCAM MODE -->
            <TabItem Header="WebCam Mode">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </StackPanel>
</Window>
